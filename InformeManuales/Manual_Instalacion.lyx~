\begin_layout Standard
Ahora si tiene un servidor propio con postgreSQL instalado debe configurar
 los siguientes parámetros con los datos de su servidor.
\end_layout

\begin_layout Standard
\align center
\begin_inset listings
lstparams "basicstyle={\small\rmfamily},language=PHP"
inline false
status open

\begin_layout Plain Layout

$db['default']['hostname'] = 'direccion o ip del computador'; 
\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout

//ejemplo:$db['default']['hostname'] ='localhost'
\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout

$db['default']['username'] = 'Usuario'; 
\end_layout

\begin_layout Plain Layout

$db['default']['password'] = 'contraseña'; 
\end_layout

\begin_layout Plain Layout

$db['default']['database'] = 'Nombre de la base de datos'; 
\end_layout

\begin_layout Plain Layout

$db['default']['dbdriver'] = 'postgre'; 
\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout

$db['default']['port'] = numero del puerto de la base de datos; 
\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout

// ejemplo: $db['default']['port'] =6432
